{
    "compilerOptions": {
      "target": "ES2018",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "../", 
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": "../",
      "paths": {
        "@shared/*": ["../shared/*"]
      },
      "resolveJsonModule": true
    },
    "include": [
      "./**/*.ts",
      "../shared/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }